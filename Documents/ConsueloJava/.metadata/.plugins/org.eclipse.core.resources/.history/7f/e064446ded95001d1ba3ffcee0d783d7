					c3 = "O";
					
					break;	
					
			for(int i=1; i<=9; i++) {
				if(jugador=="O") {
					jugador ="X";
				}else {jugador = "O";
			}
				
				System.out.println(" ");
				System.out.println("Jugador "+jugador+", ingrese casilla (fila columnas) Ej a1:");	
								
			}
				
			tablero();
					respuesta = entrada.nextLine();
					
					switch (respuesta) {
					case "a1":
