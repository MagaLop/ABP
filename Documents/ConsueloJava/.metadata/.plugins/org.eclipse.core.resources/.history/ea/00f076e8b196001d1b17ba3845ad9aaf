		String respuesta;
		int acumulado = 0;
		
		
		do {
			System.out.println("Ingrese monto");
			acumulado = acumulado + Integer.valueOf(entrada.nextLine());
			
			System.out.println("Desea continuar? (S/N)");
			respuesta = entrada.nextLine();
		
		}while(respuesta.equals("S"));
		
