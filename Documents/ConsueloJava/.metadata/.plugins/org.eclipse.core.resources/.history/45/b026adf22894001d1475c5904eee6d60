		String usuario;
		
		
		
		String nombre;
		String rut;
		String fecha_de_nacimiento;
		
		String tipo_de_usuario;
		
		String cliente;
		String profesional;
		String administrativo;
		
		String Direccion;
		String Telefono;
		String cantidad_de_empleados;
		
		String Años_de_experiencia;
		String Departamento;
		
		String Funcion;
